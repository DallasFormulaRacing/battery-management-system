{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TUI: Build",
      "type": "shell",
      "command": "cargo build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "TUI: Run",
      "type": "shell",
      "command": "cargo run",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$rustc"]
    }
  ]
}
