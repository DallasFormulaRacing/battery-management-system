{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-DCMAKE_TOOLCHAIN_FILE=cmake/gcc-arm-none-eabi.cmake",
                "-G",
                "Unix Makefiles",
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "dependsOn": "Configure",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/stlink.cfg",
                "-f", "target/stm32g4x.cfg",
                "-c", "program build/bms.elf verify reset exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build & Flash",
            "dependsOn": [
                "Build",
                "Flash"
            ],
            "dependsOrder": "sequence",
            "group": "build"
        }
    ]
}
